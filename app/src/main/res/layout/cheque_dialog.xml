<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/colorPrimaryDark"
         android:gravity="center_horizontal"
         android:padding="@dimen/dim_10"
         android:text="Amount In Cheque"
         android:textColor="@color/white"
         android:textSize="@dimen/dim_18" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/dim_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Amount In Cash"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18" />

        <ImageButton
            android:id="@+id/img_cheque_btn_cancel"
            android:layout_width="@dimen/dim_30"
            android:layout_height="@dimen/dim_30"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_btn_circle"
            android:padding="@dimen/dim_15"
            android:src="@drawable/ic_action_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"
        android:orientation="vertical"
        android:padding="@dimen/dim_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Enter the Amount In Cheque"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_amt_cheque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_10"
            android:background="@drawable/edt_bg"
            android:inputType="number"
            android:padding="@dimen/dim_10"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16" />

        <TextView
            android:id="@+id/tv_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_20"
            android:background="@drawable/ok_button"
            android:paddingBottom="@dimen/dim_5"
            android:paddingLeft="@dimen/dim_15"
            android:paddingRight="@dimen/dim_15"
            android:paddingTop="@dimen/dim_5"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_18" />
    </LinearLayout>
</LinearLayout>